{% extends "base.html.twig" %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="mt-3 mb-3 p-0 mx-auto">
    <h2 class="mb-3 text-center">Entrez votre adresse mail</h2>
    <p class="text-center">Un mail contenant un nouveau mot de passe généré aléatoirement lui sera envoyé. </p>
    {{form_start(form, {'attr': {'class': 'col-md-6 m-auto'}})}}
        {{form_widget(form)}}
        <div class="text-center">
            <button class="btn btn-success" type="submit">Envoyer</button>
        </div>
    {{form_end(form)}} 
    <hr class=" w-25 mt-5">
    <div class="text-center">
        <a href="{{ path('login')}}" class="text-success text-decoration-none font-weight-light">Retour</a>
    </div>
</div>

{% endblock %}