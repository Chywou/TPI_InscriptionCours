{% extends "base.html.twig" %}

{% block title %}Bonjour{% endblock %}

{% block body %}
<div class="mt-5">
    <h1 class="mb-4">Tout les cours</h1>
    <table class="table table-striped  text-center">
  <thead> 
    <tr>
      <th scope="col" class="text-left">Date et catégorie</th>
      <th scope="col">Place</th>
      <th scope="col">Responsable</th>
      <th scope="col">Inscription</th>
    </tr>
  </thead>
  <tbody>
    {% for lesson in allLessons %}
        <tr>
      <td class="text-left">Cours {{lesson.category.name }} du {{lesson.DateLesson|date('d.m.y') }} de {{lesson.startHour|date('H:i') }} à {{lesson.endHour|date('H:i') }}</td>
      <td>{{lesson.peopleNumber }}</td>
      <td>{{lesson.user.firstName }} {{lesson.user.lastName }}</td>
      <td><button type="button" class="btn btn-outline-dark">S'inscrire</button></td>
    </tr>
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}