{% extends "base.html.twig" %}

{% block title %}Bonjour{% endblock %}

{% block body %}
<div class="mt-3 mb-3 p-0 mx-auto">
    {% if lesson is null or lesson.participants|length >= lesson.peopleNumber or date(lesson.DateLesson) < date() %}
    <div class="mt-5 text-center">
        <p class="font-weight-light h4">Il n'est pas possible de s'inscrire à ce cours</p>
        <a href="{{ path('home')}}" class="btn btn-outline-success mt-3">Retour</a>
    </div>
    {% else %}
        <h2 class="mb-3 text-center">Inscription</h2>
        <p class="text-center font-weight-light h4">Cours {{lesson.category.name }} du {{lesson.DateLesson|date('d.m.y') }} de {{lesson.startHour|date('H:i') }} à {{lesson.endHour|date('H:i') }}<p>
        {{form_start(form, {'attr': {'class': 'col-md-6 m-auto'}})}}
            {{form_widget(form)}}
            <div class="text-center">
                <button class="btn btn-primary" type="submit">S'inscrire</button>
            </div>
        {{form_end(form)}} 
    {% endif %}
</div>

{% endblock %}