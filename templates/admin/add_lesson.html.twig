{% extends "base.html.twig" %}

{% block title %}Bonjour{% endblock %}

{% block body %}
<div class="mt-3 mb-3 p-0 mx-auto">
    <h2 class="mb-3 text-center">Ajouter un cours</h2>
    {{form_start(form, {'attr': {'class': 'col-md-6 m-auto'}})}}
        <div class="col px-md-3 px-0">{{form_row(form.dateLesson)}}</div>
        <div class="col px-md-3 px-0">{{form_label(form.startHour)}}</div>
        <div class="row px-md-3 mb-3">
            <div class="col d-flex align-items-center">{{form_widget(form.startHour)}}</div>
            <div class="col-1 d-flex align-items-center">{{form_label(form.endHour)}}</div>
            <div class="col d-flex align-items-center">{{form_widget(form.endHour)}}</div>
        </div>
        <div class="col px-md-3 px-0">{{form_row(form.user)}}</div>
        <div class="col px-md-3 px-0">{{form_row(form.category)}}</div>
        <div class="col px-md-3 px-0">{{form_row(form.peopleNumber)}}</div>
        {{form_widget(form)}}
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Ajouter</button>
        </div>
    {{form_end(form)}} 
</div>

{% endblock %}